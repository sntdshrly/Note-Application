<AnchorPane prefHeight="100.0" prefWidth="500.0" styleClass="transparent" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.note_app.controller.FeedbackItemController">
   <children>
      <HBox prefHeight="3.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="fieldTitle" text="Title" underline="true">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="fieldFeedback" graphicTextGap="0.0" prefHeight="52.0" prefWidth="385.0" text="Lorem ipsum ihkusm aoi utyra ysui Lorem ipsum ihkusm aoi utyra ysui" textFill="#7b7a7a" wrapText="true" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
            <VBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="20.0" HBox.hgrow="SOMETIMES">
               <children>
                  <ImageView fx:id="iconSelect" fitHeight="28.0" fitWidth="23.0" opacity="0.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/icon-checklist.png" />
                     </image>
                  </ImageView>
                  <Button fx:id="btnInfo" mnemonicParsing="false" opacity="0.7" prefHeight="25.0" prefWidth="108.0" style="-fx-background-color: #35ACF1; -fx-background-radius: 1em;" text="Mark as Read" textFill="#031c3c" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <styleClass>
            <String fx:value="accent-light" />
            <String fx:value="radius" />
         </styleClass>
      </HBox>
   </children>
</AnchorPane>

         </right>
         <top>
            <JFXToggleButton fx:id="btnMode" onAction="#onActionMode" prefHeight="58.0" prefWidth="156.0" text="DAY" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="460.0" />
               </BorderPane.margin>
               <font>
                  <Font name="Book Antiqua" size="12.0" />
               </font>
            </JFXToggleButton>
         </top>
      </BorderPane>
   </children>
</AnchorPane>

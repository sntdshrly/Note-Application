         <left>
            <Pane prefHeight="400.0" prefWidth="228.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="407.0" fitWidth="270.0" layoutX="-4.0" layoutY="-60.0">
                     <image>
                        <Image url="@img/bg-1.jpg" />
                     </image>
                  </ImageView>
               </children></Pane>
         </left>
         <right>
            <Pane prefHeight="318.0" prefWidth="308.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="username" layoutX="8.0" layoutY="-10.0" onMouseClicked="#onClickedUsername" prefHeight="34.0" prefWidth="275.0" promptText="Username">
                     <font>
                        <Font name="Book Antiqua" size="12.0" />
                     </font></TextField>
                  <PasswordField fx:id="password" layoutX="7.0" layoutY="45.0" onMouseClicked="#onClickedPassword" prefHeight="34.0" prefWidth="275.0" promptText="Password"><font>
                  <Font name="Book Antiqua" size="12.0" />
                  </font></PasswordField>
                  <TextField fx:id="pass_text" layoutX="7.0" layoutY="45.0" onMouseClicked="#onClickedPassword" prefHeight="34.0" prefWidth="275.0" promptText="Password">
                     <font>
                        <Font name="Book Antiqua" size="12.0" />
                     </font></TextField>
                  <Button fx:id="btnSignIn" layoutX="142.0" layoutY="104.0" mnemonicParsing="false" onAction="#signIn" prefHeight="34.0" prefWidth="137.0" styleClass="primary-signIn" text="LOGIN">
                     <font>
                        <Font name="Book Antiqua" size="12.0" />
                     </font></Button>
                  <Button fx:id="btnSignUp" layoutX="4.0" layoutY="235.0" mnemonicParsing="false" onAction="#signUp" prefHeight="23.0" prefWidth="275.0" styleClass="primary-button" text="SIGN UP" textFill="WHITE">
